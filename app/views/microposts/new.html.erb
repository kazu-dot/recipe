<div class=container>
  <h2>レシピを投稿する</h2>
    <div class='form-wrapper'>
      <%= form_with model: [@user,@micropost], local: true do |f| %>
        <%= f.label :title, '料理名'%>
        <%= f.text_field :title, class: 'form-control'%>
        <%= f.label :content, '詳細'%>
        <%= f.text_field :content, class: 'form-control'%>

        <%= f.submit "投稿する", class: 'btn-default red-round-btn' %>
      <% end %>
    </div>
</div>
