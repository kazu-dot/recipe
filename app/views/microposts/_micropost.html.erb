<li id="micropost-<%= micropost.id %>">

  <%# プロフィール画像をクリックすると詳細画面を描写する<%= link_to  micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="title"><%= micropost.title %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
     <%= time_ago_in_words(micropost.created_at) %>前
  </span>

  <div id="favorite_form">
  <%if micropost.favorited_by?(current_user)%>
      <p><span><%= micropost.favorites.count %></span><%= button_to 'お気に入りを削除', micropost_favorites_path(micropost_id: micropost.id), method: :delete, remote: true do %></p>
      <div><%= hidden_field_tag :favorite_id, micropost.id %></div>
  <% else %>
      <p><span><%= micropost.favorites.count %></span><%= button_to 'お気に入り登録', micropost_favorites_path(micropost_id: micropost.id), method: :post, remote: true do %></p>
      <div><%= hidden_field_tag :favorite_id, micropost.id %></div>
  <% end %>
</div>
</li>
